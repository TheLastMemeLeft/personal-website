---
import '../styles/global.css';
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | Aryan Agarwal Website</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-background text-foreground">
    <div class="starfield">
        <div class="big-star-1"></div>
        <div class="big-star-2"></div>
        <div class="big-star-3"></div>
         <div class="big-star-4"></div>
    </div>
    <header class="sticky top-0 bg-background/80 backdrop-blur-md border-b border-accent z-50">
      <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
        <a href="/" class="text-2xl font-bold">Aryan Agarwal</a>
        <ul class="flex space-x-6">
          <li><a href="/projects" class="hover:text-primary transition">Projects</a></li>
          <li><a href="/contact" class="hover:text-primary transition">Contact</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-accent/20 py-6 text-center text-muted">
