---
import MainLayout from '../layouts/MainLayout.astro';
---
<MainLayout title="Contact">
  <section class="py-16 container mx-auto px-6 max-w-lg">
    <h1 class="text-5xl font-bold mb-8 text-center">Get in Touch</h1>
    <form action="https://formspree.io/f/xlggelqe" method="POST" class="space-y-6">
      <!-- Hidden honeypot field for spam protection (leave empty) -->
      <input type="text" name="_gotcha" style="display: none;" />
      
      <input type="text" name="name" placeholder="Name" class="w-full p-4 bg-background border border-accent rounded text-foreground" required />
      <input type="email" name="email" placeholder="Email" class="w-full p-4 bg-background border border-accent rounded text-foreground" required />
      <textarea name="message" placeholder="Message" class="w-full p-4 bg-background border border-accent rounded text-foreground h-32" required></textarea>
      <button type="submit" class="w-full bg-primary text-background py-4 rounded hover:bg-primary/80 transition">Send</button>
    </form>
    <div class="divider mt-8"></div>
    <p class="text-center text-muted">Or email: ara030@ucsd.edu</p>
  </section>
</MainLayout>